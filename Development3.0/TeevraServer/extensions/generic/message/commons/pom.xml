<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>teevra.platform.parent</artifactId>
		<groupId>com.hs.fusion</groupId>
		<version>2.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hs.fusion</groupId>
	<artifactId>services.message.commons</artifactId>
	<version>${message.commons.version}</version>
	<packaging>bundle</packaging>
	<name>Message Parser/Formatter commons.</name>
	<description>Message binding common parser</description>
	<!--  TODO :: Need to look at import package thing also. -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>
							com.headstrong.fusion.services.message.commons.*
						</Export-Package>
						<Bundle-Activator>
							com.headstrong.fusion.services.message.commons.config.parser.CommonsConfigParserActivator
						</Bundle-Activator>
						<Start-Level>6</Start-Level>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>services.config.reader</artifactId>
			<version>${config.reader.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>com.springsource.org.jdom</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.jaxen</groupId>
			<artifactId>com.springsource.org.jaxen</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-logger</artifactId>
			<version>${platform.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>services.message.schema</artifactId>
			<version>${message.schema.version}</version>
		</dependency>
	</dependencies>
</project>