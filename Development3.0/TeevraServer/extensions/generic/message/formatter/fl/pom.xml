<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>teevra.platform.parent</artifactId>
		<groupId>com.hs.fusion</groupId>
		<version>2.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hs.fusion</groupId>
	<artifactId>services.message.formatter.fl</artifactId>
	<version>${message.formatter.fl.version}</version>
	<packaging>bundle</packaging>
	<name>Fixed Length Message Formatter.</name>
	<description>Fixed Length Message Formatter.</description>

	<dependencies>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-commons</artifactId>
			<version>${platform.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>services.message.schema</artifactId>
			<version>${message.schema.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>services.message.commons</artifactId>
			<version>${message.commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-logger</artifactId>
			<version>${platform.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Activator>
							com.headstrong.fusion.services.message.formatter.fl.FlFormatterServiceActivator
						</Bundle-Activator>
						<Export-Package>
							com.headstrong.fusion.services.message.formatter.fl.*;
						</Export-Package>
						<Start-Level>7</Start-Level>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>