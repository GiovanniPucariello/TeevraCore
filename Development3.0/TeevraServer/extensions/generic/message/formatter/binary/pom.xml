<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>teevra.platform.parent</artifactId>
		<groupId>com.hs.fusion</groupId>
		<version>2.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hs.fusion</groupId>
	<artifactId>services.message.formatter.binary</artifactId>
	<version>${message.formatter.binary.version}</version>
	<packaging>bundle</packaging>
	<name>services.message.formatter.binary</name>
	<description>services.message.formatter.binary</description>
	<dependencies>
		<!--  <dependency>
			<groupId>javolution</groupId>
			<artifactId>javolution</artifactId>
			<version>5.3.1</version>
			</dependency>   -->
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>javolution</artifactId>
			<version>5.2.6</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-commons</artifactId>
			<version>${platform.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.xerces</groupId>
			<artifactId>com.springsource.org.apache.xerces</artifactId>
			<version>2.8.1</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>services.message.schema</artifactId>
			<version>${message.schema.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>services.message.commons</artifactId>
			<version>${message.commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-logger</artifactId>
			<version>${platform.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Activator>
							com.headstrong.fusion.services.message.formatter.binary.BinaryParserFormatterServiceActivator
						</Bundle-Activator>
						<Export-Package>
							com.headstrong.fusion.services.message.formatter.binary.*;
						</Export-Package>
						<Start-Level>7</Start-Level>
						<Embed-Dependency>
							javolution;inline=true;
						</Embed-Dependency>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<forkMode>pertest</forkMode>
					<trimStackTrace>false</trimStackTrace>
					<argLine>-Djava.library.path=src/test/resources</argLine>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>