<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>teevra.platform.parent</artifactId>
		<groupId>com.hs.fusion</groupId>
		<version>2.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hs.fusion</groupId>
	<artifactId>connector.ibm.mq</artifactId>
	<version>${connectors.ibm.mq.version}</version>
	<packaging>bundle</packaging>
	<name>IBM MQ Connector</name>
	<description>IBM MQ Connector</description>
	<dependencies>
		<dependency>
			<groupId>javax.jms</groupId>
			<artifactId>com.springsource.javax.jms</artifactId>
			<version>1.1.0</version>
		</dependency>
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>com.ibm.mq</artifactId>
			<version>7.0</version>
		</dependency>
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>com.ibm.mq.jmqi</artifactId>
			<version>7.0</version>
		</dependency>
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>com.ibm.mqjms</artifactId>
			<version>7.0</version>
		</dependency>
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>dhbcore</artifactId>
			<version>7.0</version>
		</dependency>
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>connector</artifactId>
			<version>7.0</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-commons</artifactId>
			<version>${platform.version}</version>
		</dependency>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-logger</artifactId>
			<version>${platform.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.fusion.external</groupId>
			<artifactId>ojdbc</artifactId>
			<version>14</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Activator>
							com.headstrong.fusion.connector.ibm.mq.activator.IBMMQComponentActivator
						</Bundle-Activator>
						<Export-Package>
							com.headstrong.fusion.connector.ibm.mq.*
						</Export-Package>
						<Import-Package>!com.ibm.*,!oracle.ons,!oracle.security.pki,!oracle.i18n.text.converter,*</Import-Package>
						<Embed-Dependency>
							com.ibm.mq.commonservices;inline=true;com.ibm.mq.jmqi;inline=true;connector;inline=true;dhbcore;inline=true;com.ibm.mqjms;inline=true;com.ibm.mq;inline=true;ojdbc;inline=true;
						</Embed-Dependency>
						<Component-Version>2.1.0</Component-Version>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>