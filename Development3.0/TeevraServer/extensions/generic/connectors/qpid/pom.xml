<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>teevra.platform.parent</artifactId>
		<groupId>com.hs.fusion</groupId>
		<version>2.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.hs.fusion</groupId>
	<artifactId>connector.qpid</artifactId>
	<version>1.0</version>
	<packaging>bundle</packaging>
	<name>QPid Connector</name>
	<description>QPid Connector</description>
	<dependencies>
		<dependency>
			<groupId>com.hs.fusion</groupId>
			<artifactId>fusion-commons</artifactId>
			<version>${platform.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.jms</groupId>
			<artifactId>com.springsource.javax.jms</artifactId>
			<version>1.1.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.qpid</groupId>
			<artifactId>qpid</artifactId>
			<version>0.6</version>
		</dependency>
		<dependency>
  			<groupId>org.apache.qpid</groupId>
  			<artifactId>qpid-client</artifactId>
  			<version>1.0</version>
		</dependency>
		<dependency>
  			<groupId>org.apache.qpid</groupId>
  			<artifactId>qpid-common</artifactId>
  			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.mina</groupId>
			<artifactId>mina-core</artifactId>
			<version>1.1.7</version>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-mina</artifactId>
			<version>${camel-version}</version>			
		</dependency>
		<dependency>
			<groupId>jboss-j2ee</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>4.0.5.GA</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2</version>
		</dependency>
		<dependency>
			<groupId>backport-util-concurrent</groupId>
			<artifactId>backport-util-concurrent</artifactId>
			<version>2.2</version>
		</dependency>	
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-core</artifactId>
			<version>${camel-version}</version>
		</dependency>
	
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-Activator>
							com.headstrong.fusion.connector.qpid.activator.QpidActivator
						</Bundle-Activator>						
						<Export-Package>
							com.headstrong.fusion.connector.qpid,com.headstrong.fusion.connector.qpid.*
						</Export-Package>
						<Import-Package>
!org.jboss.dom4j,!org.jboss.dom4j.io.*,!sun.misc.*,!org.jboss.mx.util.*,!org.jboss0.util.xml.*,!org.jboss.mx.loading.*,!org.jboss.mx.server.*,!org.jboss.mx.metadata.*,!org.jboss.logging.*,!org.jboss.util.id.*,!org.jboss.mx.modelmbean.*,!org.jboss.util.*,*;
						</Import-Package>
						<Embed-Dependency>
qpid;inline=true;mina-core;inline=true;qpid-common;inline=true;qpid-client;inline=true;jboss-j2ee;backport-util-concurrent;commons-collections;
						</Embed-Dependency>
						<Private-Package>
							org.apache.qpid.jndi
						</Private-Package>						
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>